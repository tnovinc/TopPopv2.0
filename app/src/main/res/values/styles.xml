<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Track.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/shojumaru</item>
    </style>

    <style name="TextAppearance.Artist.Name" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/fugaz_one</item>
    </style>

    <style name="TextAppearance.Album.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/holtwood_one_sc</item>
    </style>
</resources>