<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginBottom"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/indexTextView"
            android:layout_width="@dimen/albumTrackIndexWidth"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="10"
            android:textSize="@dimen/textSizeLarge"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/marginLeft"/>
        <TextView
            android:id="@+id/trackTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/indexTextView"
            android:text="Placeholder"
            android:textSize="@dimen/textSizeLarge"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginStart="@dimen/marginLeft"
            style="@style/TextAppearance.Track.Title"/>
        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Placeholder"
            android:textSize="@dimen/textSizeMedium"
            android:gravity="center"
            android:layout_marginEnd="@dimen/marginDefault"
            android:layout_marginTop="@dimen/marginDefault"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>